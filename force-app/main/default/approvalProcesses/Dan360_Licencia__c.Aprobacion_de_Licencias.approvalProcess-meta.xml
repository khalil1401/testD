<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Cantidad_de_Dias__c</field>
        <field>Cantidad_de_Horas__c</field>
        <field>Estado__c</field>
        <field>Motivo__c</field>
        <field>Fecha_de_inicio__c</field>
        <field>Fecha_de_Fin__c</field>
        <field>VisMed_APM__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Dan360_Licencia__c.RecordType</field>
                <operation>equals</operation>
                <value>Licencia</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Aprobacion de Licencias</label>
        <name>Aprobacion_de_Licencias</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Dan360_Licencia__c.RecordType</field>
                <operation>equals</operation>
                <value>Tiempo no Promocional</value>
            </criteriaItems>
        </entryCriteria>
        <label>Aprobacion de TNP</label>
        <name>Aprobacion_de_TNP</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Proceso de aprobacion para todas las licencias.</description>
    <emailTemplate>VisMed_TemplatesVisitaMedica/VisMed_LicenciaPendiente</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Dan360_Licencia__c.Motivo__c</field>
            <operation>notEqual</operation>
            <value>Festivo</value>
        </criteriaItems>
        <criteriaItems>
            <field>Dan360_Licencia__c.Estado__c</field>
            <operation>equals</operation>
            <value>Pendiente</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Aprobar_Licencia</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_Licencia_Aceptada</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Blanquear_Codigo_Duplicidad</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_Licencia_Rechazada</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rechazar_Licencia</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Aprobacion de Licencias</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
