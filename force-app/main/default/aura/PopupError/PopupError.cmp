<aura:component>

    <aura:attribute name="isFinModalOpen" type="boolean" default="true"/>
    <aura:attribute name="revisarDatos" type="boolean" default="true"/>
    <aura:attribute name="tituloError" type="String"/>
    <aura:attribute name="cuerpoError" type="String"/>
    <aura:attribute name="paginaActual" type="String"/>

    <aura:if isTrue="{!v.isFinModalOpen}">
        <!--###### MODAL BOX Start######--> 
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header slds-modal__header_empty">
                    <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"
                            title="Close"
                            onclick="{! c.likenClose }">
                        <lightning:icon class="icn"
                                        iconName="utility:close"
                                        size="small"
                                        alternativeText="Indicates approval"/>
                    </button>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <div class="slds-align_absolute-center">
                        <lightning:icon class="icnModal"
                                        iconName="utility:resource_absence"
                                        size="large"/>
                    </div>
                    <p class="slds-text-align_center" style="margin-top: 5%;">
                        {!v.tituloError}
                    </p>
                    <p class="slds-text-align_center">
                        {!v.cuerpoError}
                    </p>
                    <aura:if isTrue="{!v.revisarDatos}">
                        <div class="slds-align_absolute-center" style="margin-top: 5%;">
                            <lightning:button   variant="brand" 
                                                label="Revisar datos"
                                                onclick="{!c.likenClose}"/>
                        </div>
                    </aura:if>
                </div>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>

</aura:component>