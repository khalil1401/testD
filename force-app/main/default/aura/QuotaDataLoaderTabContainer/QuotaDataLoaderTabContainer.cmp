<aura:component 
    implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader,forceCommunity:availableForAllPageTypes" 
    access="global"
>
    <div class="slds-align_absolute-center slds-m-top_large ">
        <div class="slds-box slds-theme_default  slds-size_1-of-2">            
            <c:quotaDataLoader onclose="{!c.closeQA}"></c:quotaDataLoader>
            <div class="slds-grid slds-grid_align-end">
                <lightning:workspaceAPI aura:id="workspace"/>
                <lightning:button                          
                        variant="brand-outline" 
                        label="Cerrar" 
                        title="Cerrar" 
                        onclick="{! c.closeTab }" 
                />        

            </div>
        </div>

    </div>
</aura:component>