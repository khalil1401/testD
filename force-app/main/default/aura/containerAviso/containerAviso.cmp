<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">

	<aura:attribute name="altoMaximo" type="String" default="100"/>
	<aura:attribute name="altoMinimo" type="String" default="100"/>
    <aura:attribute name="mensaje" type="String" />
    <aura:attribute name="fontFamily" type="String" />
    <aura:attribute name="backgroundColor" type="String"/>
    <aura:attribute name="textColor" type="String" default="white"/>
    <aura:attribute name="claimExtra" type="Boolean"/>

    <aura:html tag="style">
        .containerMensajeAviso {
            background-color: {!v.backgroundColor};
        }
    </aura:html>

    <div class="containerMensajeAviso slds-align_absolute-center">
        <div class="slds-grid slds-wrap">
            <div class="slds-col slds-size_1-of-12 slds-medium-size_2-of-12">
            </div>
            <div class="slds-col slds-size_10-of-12 slds-medium-size_8-of-12 slds-m-top_xx-large slds-m-bottom_xx-large">
                <p style="{!'color: '+ v.textColor +';
                            font-size: 12px;
                            font-family: '+ v.fontFamily + ';'}">
                    {!v.mensaje}
                </p>
                <aura:if isTrue="{!v.claimExtra}">
                    <p  class="slds-m-top_small"
                        style="{!'color: '+ v.textColor +';
                                font-size: 12px;
                                font-family: MontserratRegular;
                                text-transform: uppercase; margin-left: 5%; margin-right: 5%'}">
                        <span style="font-family: MontserratSemiBold;">FORTISIP COMPACT PROTEIN:</span> ALIMENTO PARA PROPÓSITOS MÉDICOS ESPECÍFICOS LÍQUIDO. LIBRE DE GLUTEN 
                    </p>
                </aura:if>
            </div>
            <div class="slds-col slds-size_1-of-12 slds-medium-size_2-of-12">
            </div>
        </div>
    </div>
    
</aura:component>