<aura:component implements="forceCommunity:availableForAllPageTypes">

    <aura:attribute name="backgroundPrimerColorGradiente" type="String"/>
    <aura:attribute name="backgroundSegundoColorGradiente" type="String"/>
    <aura:attribute name="titulo" type="String"/>
    <aura:attribute name="texto" type="String"/>
    <aura:attribute name="textoDetalles" type="String"/>
    <aura:attribute name="verDetalles" type="Boolean" default="false"/>

    <div style="{!'background: linear-gradient(90deg, ' + v.backgroundPrimerColorGradiente +' 0%,  ' + v.backgroundSegundoColorGradiente +' 100%);'}">
        <br></br>
        <br></br>
        <div class="slds-grid">
            <div class="slds-col slds-large-size_2-of-12">
            </div>
            <div class="slds-col slds-size_1-of-1 slds-large-size_8-of-12">
                <p  class="slds-m-bottom_small tituloDropdownBalanceOncologia">
                    <aura:unescapedHtml value="{!v.titulo}"/>
                    <hr class="lineaDropdownBalanceOncologia"/>    
                </p>
                <p  class="slds-m-top_small textoDropdownBalanceOncologia">
                    <img    src="https://sndigitalassets.s3.sa-east-1.amazonaws.com/PORTAL-PACIENTES/SECCION_ONCOLOGIA/ONCOLOGIA-NUTRICION_ONCOLOGIA/ONCO-BALANCE/PP-imagenBalanceNutricionalOncologia%282022-05-20%29.png"
                            alt="img"
                            style="float: right;width: 35%;"/>
                    <aura:unescapedHtml value="{!v.texto}"/>
                </p>
                <aura:if isTrue="{!v.verDetalles}">
                    <p  class="slds-m-top_small textoDropdownBalanceOncologia">
                        <aura:unescapedHtml value="{!v.textoDetalles}"/>
                    </p>
                </aura:if>
                <br></br>
                <p  onclick="{!c.mostrarMasMenos}"
                    class="textoVerMasDropdownBalanceOncologia">
                    <aura:if isTrue="{!v.verDetalles}">
                        - VER MENOS
                        <aura:set attribute="else">
                            + VER M√ÅS
                        </aura:set>
                    </aura:if>
                </p>
            </div>
            <div class="slds-col slds-large-size_2-of-12">
            </div>
        </div>
        <br></br>
        <br></br>
    </div>

</aura:component>