<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dan360_CuotaSoloNumeros</fullName>
    <active>true</active>
    <description>Regla que valida que solo se ingresen números en el campo Cuota__c</description>
    <errorConditionFormula>AND(
				NOT(ISBLANK(Dan360_Cuota__c)),
    NOT(REGEX(TEXT(Dan360_Cuota__c), &quot;^[0-9]+$&quot;))
				)</errorConditionFormula>
    <errorMessage>Solo es posible ingresar números</errorMessage>
</ValidationRule>
