<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Dan360_NotificacionSaldoVencido</fullName>
        <description>Notificación de saldo vencido</description>
        <protected>false</protected>
        <recipients>
            <field>Dan360_CorreoDeCliente__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>clientes@nutricia.com.ar</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Dan360_OMS/Dan360_NotificacionSaldoDeudaVencida</template>
    </alerts>
    <rules>
        <fullName>Alerta Vencimiento de Saldo</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Dan360_DocumentosCuentaCorriente__c.Dan360_Saldo__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Dan360_DocumentosCuentaCorriente__c.Dan360_Vencimiento__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Alerta de correo, que se envía cuando llega la Fecha de vencimiento</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Dan360_NotificacionSaldoVencido</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Dan360_DocumentosCuentaCorriente__c.Dan360_Vencimiento__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
